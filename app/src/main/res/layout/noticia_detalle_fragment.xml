<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noticia_detail_card">

    <TextView
        android:id="@+id/txtTitularDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Holaaaa"
        android:textColor="#C2A14D"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/imgFotoNoticiaDetail"
        android:layout_width="240dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtTitularDetail"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/txtDescripcionNoticiaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imgFotoNoticiaDetail"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtFechaNoticiaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtDescripcionNoticiaDetail"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        android:gravity="center"
        />

</RelativeLayout>