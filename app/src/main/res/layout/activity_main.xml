<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AmeixaRockBackGround">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/AmeixaRockBackGround"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="AMEIXA ROCK"
            android:textColor="@color/textStandard"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginRight="35dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtCuentaAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/RojoVivo"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ListView
        android:id="@+id/listaNoticias"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/txtCuentaAtras"
        app:layout_constraintBottom_toTopOf="@+id/btnsRedes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/btnsRedes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        >

        <ImageButton
            android:id="@+id/btnYoutube"
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:src="@drawable/logo_youtube"
            android:background="@color/AmeixaRockBackGround"
            />

        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/logo_facebook"
            android:background="@color/AmeixaRockBackGround"
            />

        <ImageButton
            android:id="@+id/btnInstagram"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/logo_instagram"
            android:layout_marginStart="16dp"
            android:background="@color/AmeixaRockBackGround"
            />

        <ImageButton
            android:id="@+id/btnTwitter"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/logo_twitter"
            android:layout_marginStart="16dp"
            android:background="@color/AmeixaRockBackGround"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>