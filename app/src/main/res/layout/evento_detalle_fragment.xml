<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/producto_detail_card">

    <TextView
        android:id="@+id/txtTituloEventoDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Holaaaaaaaa"
        android:textColor="#C2A14D"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/imgFotoEventoDetail"
        android:layout_width ="240dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@+id/txtTituloEventoDetail"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtDescripcionEventoDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imgFotoEventoDetail"
        android:fontFamily="monospace"
        android:textColor="@color/textStandard"
        android:textSize="14dp"
        android:gravity="center"
        android:textStyle="bold"
        />
</RelativeLayout>